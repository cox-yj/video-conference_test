{
    "compilerOptions": {
      "target": "es5",
      "module": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": true,
      "allowJs": true,
      "jsx": "react",
      "lib": ["es6", "dom"],
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  